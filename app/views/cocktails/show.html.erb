

<div class=“show”>
  <h2 id="dose"><%= @cocktail.name %></h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= "#{dose.description} - #{dose.ingredient.name}"%>   <%= link_to 'delete', dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?"} %>
</li>
      <% end %>
  </ul>
  <%= render "doses/new", cocktail: @cocktail, dose: @dose %>

</div>

<button  class='pulse' ><%= link_to 'Back', cocktails_path%></button>
