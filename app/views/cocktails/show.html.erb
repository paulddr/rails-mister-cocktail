<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <i class="fas fa-cocktail"></i>
    <p>Mister Cocktail</p>
</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">

        <a class="nav-link" href="/cocktails"><i class="fas fa-home pulse"></i></a>
      </li>

    </ul>
  </div>
</div>

<div class="photo">
<% if @cocktail.photo.attached? %>
<%= cl_image_tag @cocktail.photo.key, width: 400, height: 300, crop: :fill %>
<% end %>
<div>
<div id="yolo">

  <h2 ><%= @cocktail.name %></h2>
  </div>
  <ul>
    <% @cocktail.doses.each do |dose| %>

    <li><%= "#{dose.description} - #{dose.ingredient.name}"%>   <%= link_to 'delete', dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?"} %>
</li>
      <% end %>
  </ul>
</div>
</div>

</div>
<br>

<div>

  <%= render "doses/new", cocktail: @cocktail, dose: @dose %>

</div>


<button  class='pulse' ><%= link_to 'Back', cocktails_path%></button>
